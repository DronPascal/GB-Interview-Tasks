<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="presentation.MoviesFragment">

    <EditText
        android:id="@+id/et_search_input"
        style="@style/SearchStyle"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginTop="@dimen/size_medium"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="@dimen/size_big"
        android:contentDescription="@string/search_icon"
        android:src="@drawable/ic_search"
        app:layout_constraintRight_toRightOf="@id/et_search_input"
        app:layout_constraintTop_toTopOf="@id/et_search_input"
        app:tint="?attr/colorOnSurface" />

    <ProgressBar
        android:id="@+id/pb_search"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/size_big"
        android:indeterminate="true"
        app:layout_constraintRight_toRightOf="@id/et_search_input"
        app:layout_constraintTop_toTopOf="@id/et_search_input" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_movies"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/size_small"
        android:clipToPadding="false"
        android:layout_marginTop="64dp"
        android:paddingTop="@dimen/size_medium"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:orientation="vertical"
        app:spanCount="2"
        tools:listitem="@layout/item_movie" />

    <TextView
        android:id="@+id/tv_placeholder"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_medium"
        android:gravity="center"
        android:text="@string/movies_placeholder"
        android:textColor="?attr/colorOnBackground"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        app:layout_constraintBottom_toBottomOf="@id/rv_movies"
        app:layout_constraintEnd_toEndOf="@id/rv_movies"
        app:layout_constraintStart_toStartOf="@id/rv_movies" />

</androidx.constraintlayout.widget.ConstraintLayout>